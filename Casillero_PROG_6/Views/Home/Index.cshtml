@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a Casillero Express</h1>
    <p class="lead">Su mejor opción para compras por internet desde USA y China</p>

    <div class="embed-responsive embed-responsive-16by9 mb-4">
        <video controls class="embed-responsive-item w-100" style="max-height: 500px;">
            <source src="~/videos/intro.mp4" type="video/mp4">
            Tu navegador no soporta videos HTML5.
        </video>
    </div>

    <p>
        <a asp-controller="User" asp-action="Paquetes" class="btn btn-primary btn-lg">Ingresar al Sistema &raquo;</a>
    </p>

    <div class="row mt-4">
        <div class="col-md-4">
            <h3>Empresa</h3>
            <p>Casillero Express - Su mejor opción para compras internacionales</p>
        </div>
        <div class="col-md-4">
            <h3>Versión</h3>
            <p>@ViewBag.Version</p>
        </div>
        <div class="col-md-4">
            <h3>Desarrollado por</h3>
            <p>@ViewBag.Developers</p>
        </div>
    </div>
</div>