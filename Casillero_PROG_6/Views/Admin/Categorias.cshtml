@model IEnumerable<Casillero_PROG_6.Models.Categoria>
@{
    ViewData["Title"] = "Administración de Categorías";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Administración de Categorías</h2>
    <a asp-action="CreateCategoria" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Categoría
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Listado de Categorías</h4>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre de la Categoría</th>
                            <th>Porcentaje de Impuesto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.nombre</td>
                                <td>@item.porcentaje%</td>
                                <td>
                                    <a asp-action="EditCategoria" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="DeleteCategoria" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay categorías registradas.
            </div>
        }
    </div>
</div>