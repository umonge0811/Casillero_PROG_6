@model Casillero_PROG_6.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Crear Categoría</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateCategoria" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="nombre" class="form-label">Nombre de la Categoría</label>
                        <input asp-for="nombre" class="form-control" placeholder="Ej: Electrónica" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="porcentaje" class="form-label">Porcentaje de Impuesto (%)</label>
                        <div class="input-group">
                            <input asp-for="porcentaje" class="form-control" type="number" min="0" max="100" step="0.01" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="porcentaje" class="text-danger"></span>
                        <div class="form-text">El porcentaje debe estar entre 0% y 100%.</div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Categorias" class="btn btn-secondary">Volver a la lista</a>
                        <button type="submit" class="btn btn-primary">Crear Categoría</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}