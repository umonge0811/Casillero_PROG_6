@model Casillero_PROG_6.Models.Mensaje
@{
    ViewData["Title"] = "Contacto";
}

<div class="row">
    <div class="col-md-6">
        <h2>Contáctenos</h2>
        <p class="lead">Déjenos un mensaje y nos pondremos en contacto con usted a la brevedad.</p>

        <div class="mb-4">
            <h5><i class="bi bi-geo-alt-fill"></i> Dirección</h5>
            <p>Calle Principal #123, San José, Costa Rica</p>

            <h5><i class="bi bi-telephone-fill"></i> Teléfono</h5>
            <p>+506 2222-3333</p>

            <h5><i class="bi bi-envelope-fill"></i> Email</h5>
            <p>info@casilleroexpress.com</p>

            <h5><i class="bi bi-clock-fill"></i> Horario de Atención</h5>
            <p>Lunes a Viernes: 8:00 AM - 5:00 PM<br>Sábados: 9:00 AM - 12:00 PM</p>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Envíenos un mensaje</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Success
                    </div>
                }

                <form asp-action="Contact" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Su nombre completo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="XXXX-XXXX" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="mensaje" class="form-label"></label>
                        <textarea asp-for="mensaje" class="form-control" rows="5" placeholder="Escriba su mensaje aquí..."></textarea>
                        <span asp-validation-for="mensaje" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}