@model Casillero_PROG_6.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4>¿Está seguro que desea eliminar este usuario?</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Advertencia:</strong> Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a este usuario.
                </div>

                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Usuario:</dt>
                    <dd class="col-sm-8">@Model.NombreUsuario</dd>

                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Teléfono:</dt>
                    <dd class="col-sm-8">@Model.Telefono</dd>

                    <dt class="col-sm-4">Tipo:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Tipo == 1)
                        {
                            <span class="badge bg-info">Usuario</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Administrador</span>
                        }
                    </dd>
                </dl>

                <form asp-action="DeleteUsuario" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>