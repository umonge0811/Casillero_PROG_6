@model Casillero_PROG_6.Models.Tarifa
@{
    ViewData["Title"] = "Eliminar Tarifa";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4>¿Está seguro de eliminar esta tarifa?</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.nombre</dd>

                    <dt class="col-sm-4">Costo por Kilo</dt>
                    <dd class="col-sm-8">$@Model.Costo.ToString("N2")</dd>
                </dl>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Esta acción eliminará permanentemente la tarifa y puede afectar a los paquetes existentes.
                </div>

                <form asp-action="DeleteTarifa" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Tarifas" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>