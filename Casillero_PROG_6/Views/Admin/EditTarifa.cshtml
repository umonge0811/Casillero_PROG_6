<!-- Views/Admin/EditTarifa.cshtml -->
@model Casillero_PROG_6.Models.Tarifa
@{
    ViewData["Title"] = "Editar Tarifa/Servicio";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Editar Tarifa/Servicio</h4>
            </div>
            <div class="card-body">
                <form asp-action="EditTarifa" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="nombre" class="form-label">Nombre del Servicio</label>
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Costo" class="form-label">Costo por Kilo ($)</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Costo" class="form-control" type="number" min="5" max="100" step="0.01" />
                        </div>
                        <span asp-validation-for="Costo" class="text-danger"></span>
                        <div class="form-text">El costo debe estar entre $5 y $100.</div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Tarifas" class="btn btn-secondary">Volver a la lista</a>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}